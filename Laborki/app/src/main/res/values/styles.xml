<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lime</item>
        <item name="colorPrimaryDark">@color/limeDark</item>
        <item name="colorAccent">@color/limeDark</item>
        <item name="android:navigationBarColor">@color/limeDark</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/google_sans_regular_family</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/google_sans_regular_family</item>
    </style>

    <style name="SmallBlackText" parent="SmallText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/google_sans_regular_family</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/lime</item>
        <item name="android:fontFamily">@font/google_sans_regular_family</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
        <item name="android:paddingStart">@dimen/margin_standard</item>
        <item name="android:paddingEnd">@dimen/margin_standard</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
    </style>

</resources>